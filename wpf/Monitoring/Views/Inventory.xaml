                         VerticalAlignment="Center" Height="40"
                          mah:TextBoxHelper.Watermark="상품코드 입력"
                         mah:TextBoxHelper.UseFloatingWatermark="True"
                         mah:TextBoxHelper.ClearTextButton="True"/>
                <TextBox x:Name="ProductName" Grid.Row="2" Grid.Column="1"
                         VerticalAlignment="Center" Height="40"
                         mah:TextBoxHelper.Watermark="상품명 입력"
                         mah:TextBoxHelper.UseFloatingWatermark="True"
                         mah:TextBoxHelper.ClearTextButton="True"/>
                <TextBox x:Name="Classification" Grid.Row="3" Grid.Column="1"
                         VerticalAlignment="Center" Height="40"
                         mah:TextBoxHelper.Watermark="상품분류"
                         mah:TextBoxHelper.UseFloatingWatermark="True"
                         mah:TextBoxHelper.ClearTextButton="True"/>
                <TextBox x:Name="Price" Grid.Row="4" Grid.Column="1"
                         VerticalAlignment="Center" Height="40"
                         mah:TextBoxHelper.Watermark="상품가격"
                         mah:TextBoxHelper.UseFloatingWatermark="True"
                         mah:TextBoxHelper.ClearTextButton="True"/>
                <TextBox x:Name="Stock" Grid.Row="5" Grid.Column="1"
                         VerticalAlignment="Center" Height="40"
                         mah:TextBoxHelper.Watermark="재고수량"
                         mah:TextBoxHelper.UseFloatingWatermark="True"
                         mah:TextBoxHelper.ClearTextButton="True"/>
                
                <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                            Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="신규" x:Name="NewEmployee"
                            Width="100" Height="40"
                            Style="{StaticResource MahApps.Styles.Button.Square.Highlight}"
                            Click="BtnNew_Click"/>           
                    <Button Content="저장" x:Name="SaveEmployee"
                            Width="100" Height="40" Margin="10,0,10,0"
                            Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                            Click="SaveEmployee_Click"/>
                    <Button Content="삭제" x:Name="DelEmployee"
                            Width="100" Height="40"
                            Style="{StaticResource MahApps.Styles.Button.Square}"/>
                </StackPanel>
