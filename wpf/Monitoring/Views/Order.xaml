        </Grid>

        <GroupBox Grid.Column="1" Margin="10" Header="상품 정보">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Grid.Row ="0" Grid.Column="0" Content="제품번호" FontWeight="Bold"
                       VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0"/>
                <Label Grid.Row ="1" Grid.Column="0" Content="상품명" FontWeight="Bold"
                       VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0"/>
                <Label Grid.Row ="2" Grid.Column="0" Content="가격" FontWeight="Bold"
                       VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0"/>
                <Label Grid.Row ="3" Grid.Column="0" Content="재고수량" FontWeight="Bold"
                       VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0"/>

                <TextBox x:Name="ProductCode" Grid.Row="0" Grid.Column="1"
                         VerticalAlignment="Center" Height="40"
                         mah:TextBoxHelper.UseFloatingWatermark="True"
                         mah:TextBoxHelper.ClearTextButton="True" IsReadOnly="True"/>
                <TextBox x:Name="ProductName" Grid.Row="1" Grid.Column="1"
                         VerticalAlignment="Center" Height="40"
                         mah:TextBoxHelper.Watermark="상품명 입력"
                         mah:TextBoxHelper.UseFloatingWatermark="True"
                         mah:TextBoxHelper.ClearTextButton="True" IsReadOnly="True"/>
                <TextBox x:Name="Price" Grid.Row="2" Grid.Column="1"
                         VerticalAlignment="Center" Height="40"
                         mah:TextBoxHelper.Watermark="가격"
                         mah:TextBoxHelper.UseFloatingWatermark="True"
                         mah:TextBoxHelper.ClearTextButton="True" IsReadOnly="True"/>
                <TextBox x:Name="Stock" Grid.Row="3" Grid.Column="1"
                         VerticalAlignment="Center" Height="40"
                         mah:TextBoxHelper.UseFloatingWatermark="True"
                         mah:TextBoxHelper.ClearTextButton="True" IsReadOnly="True"/>

                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                            Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="저장" x:Name="SaveData"
                            Width="100" Height="40" Margin="10,0,10,0"
                            Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                            Click="Save_Click"/>
                    <Button Content="취소" x:Name="CancleOrder"
                            Width="100" Height="40" Margin="10,0,10,0"
                            Style="{StaticResource MahApps.Styles.Button.Square}"
                            Click="Cancel_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
